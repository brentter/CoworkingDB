!!! XML
!!! Strict
%html{html_attrs()}
  %head
    = stylesheet_link_tag 'http://fonts.googleapis.com/css?family=Nobile:regular,italic,bold,bolditalic'
    = stylesheet_link_tag 'compiled/screen', :media => 'screen, projection'
    = javascript_include_tag "http://maps.google.com/maps/api/js?sensor=false"
    = javascript_include_tag 'http://closure-library.googlecode.com/svn/trunk/closure/goog/base.js'
    - if Rails.env == 'production'
      = javascript_include_tag 'http://ajax.googleapis.com/ajax/libs/jquery/1.4.1/jquery.js', 'stats'
    - else
      = javascript_include_tag 'jquery-1.4.1.min.js'
    = javascript_include_tag 'rails', 'Coworking.Map.js', 'Coworking.Application.js'
    = csrf_meta_tag
  %body
    .container
      %h1= "CoworkingDB"
      = render :partial => 'shared/navigation'
      = yield
